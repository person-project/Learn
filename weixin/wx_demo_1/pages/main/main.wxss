.container {
  display: flex;
  box-sizing: border-box;
  flex-direction: column;
  width: 100%;
  height: 100%;
  /* background: red; */
}

.content {
  flex: 1;
  display: flex;
}

.slide-image {
  width: 100%;
}

.nav-container {
  margin-top: 8px;
  height: 40px;
}

.nav-container ul {
  height: 100%;
  display: flex;
  box-sizing: border-box;
  align-items: center;
  font-size: 14px;
  color: black;
}

.nav-container ul>li {
  flex: 1;
  text-align: center;
}

.nav-container ul>li.active {
  color: #1aad16;
  font-size: 16px;
}

.tab-container {
  background: #ccc;
  display: flex;
  height: 40px;
  border-top: 1px solid #ccc;
  align-items: center;
}

.tab-container>navigator {
  flex: 1;
  text-align: center;
  font-size: 16px;
  color: black;
}

.tab-container>navigator.active {
  color: white;
}

